<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppFerramentas.PageFerramentasCadastro">
    <NavigationPage.TitleView>
        <StackLayout Orientation="Horizontal">
            <Label Text="Cadastro de Clientes" FontAttributes="Bold" TextColor="White" FontSize="Large"/>
        </StackLayout>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <StackLayout Margin="15">
            <Label Text="Tipo" FontSize="Medium" FontAttributes="Bold"/>
            <Entry x:Name="txtTipo" Keyboard="Default"/>
            <Label Text="Nome" FontSize="Medium" FontAttributes="Bold"/>
            <Entry x:Name="txtNomeFerramenta" Keyboard="Default"/>
            <Label Text="Codigo" FontSize="Medium" FontAttributes="Bold"/>
            <Entry x:Name="txtCodigo" Keyboard="Default"/>
            <Button Text="Cadastrar" BackgroundColor="White" FontAttributes="Bold" x:Name="btCadastrar" Clicked="btCadastrar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>